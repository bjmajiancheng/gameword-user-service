<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.coolplay.system.system.dao.LabelMapper">

    <resultMap id="Label" type="com.coolplay.system.system.model.LabelModel">
        <result property="id" column="id"/>
        <result property="catId" column="cat_id"/>
        <result property="labelName" column="label_name"/>
		<result property="creator" column="creator"/>
		<result property="creatorUserId" column="creator_user_id"/>
		<result property="type" column="type"/>
        <result property="status" column="status"/>
        <result property="isDel" column="is_del"/>
        <result property="ctime" column="c_time"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="columns">
	    <![CDATA[
        id ,cat_id ,label_name ,creator , creator_user_id, type, status ,is_del ,c_time
	    ]]>
	</sql>

	<sql id="findWhere">
	    <where>
			<if test="labelName != null">
				AND label_name = #{labelName}
			</if>
			<if test="creator != null">
				AND creator = #{creator}
			</if>
	    </where>
	</sql>

	
	<select id="find" resultMap="Label">
	    SELECT <include refid="columns"/> FROM d_label 
		<include refid="findWhere"/>
    </select>

	<select id="findById" resultMap="Label" >
	SELECT <include refid="columns"/>
	<![CDATA[
	        FROM d_label
	        WHERE
		        id = #{id} 
	    ]]>
	</select>
	
</mapper>


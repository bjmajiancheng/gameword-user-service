<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gameword.user.user.dao.AdvertisementMapper">

    <resultMap id="Advertisement" type="com.gameword.user.user.model.AdvertisementModel">
        <result property="id" column="id"/>
        <result property="platform" column="platform"/>
        <result property="image" column="image"/>
        <result property="link" column="link"/>
        <result property="status" column="status"/>
        <result property="userId" column="user_id"/>
        <result property="ctime" column="c_time"/>
        <result property="utime" column="u_time"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="columns">
	    <![CDATA[
        id ,platform ,image ,link ,status ,user_id ,c_time ,u_time 
	    ]]>
	</sql>

	<sql id="findWhere">
	    <where>
			<if test="image != null">
				AND image = #{image}
			</if>
			<if test="link != null">
				AND link = #{link}
			</if>
	    </where>
	</sql>

	
	<select id="find" resultMap="Advertisement">
	    SELECT <include refid="columns"/> FROM d_advertisement 
		<include refid="findWhere"/>
    </select>

	<select id="findById" resultMap="Advertisement" >
	SELECT <include refid="columns"/>
	<![CDATA[
	        FROM d_advertisement
	        WHERE
		        id = #{id} 
	    ]]>
	</select>
	
</mapper>


<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gameword.user.user.dao.CompanyMapper">

    <resultMap id="Company" type="com.gameword.user.user.model.CompanyModel">
        <result property="id" column="id"/>
        <result property="cityId" column="city_id"/>
        <result property="companyLogo" column="company_logo"/>
        <result property="cnName" column="cn_name"/>
        <result property="enName" column="en_name"/>
        <result property="cnDesc" column="cn_desc"/>
        <result property="enDesc" column="en_desc"/>
        <result property="ctime" column="c_time"/>
        <result property="utime" column="u_time"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="columns">
	    <![CDATA[
        id ,city_id ,company_logo ,cn_name ,en_name ,cn_desc ,en_desc ,c_time ,u_time
	    ]]>
	</sql>

	<sql id="findWhere">
	    <where>
			<if test="companyLogo != null">
				AND company_logo = #{companyLogo}
			</if>
			<if test="cnName != null">
				AND cn_name = #{cnName}
			</if>
			<if test="enName != null">
				AND en_name = #{enName}
			</if>
			<if test="cnDesc != null">
				AND cn_desc = #{cnDesc}
			</if>
			<if test="enDesc != null">
				AND en_desc = #{enDesc}
			</if>
	    </where>
	</sql>

	
	<select id="find" resultMap="Company">
	    SELECT <include refid="columns"/> FROM d_company 
		<include refid="findWhere"/>
    </select>

	<select id="findById" resultMap="Company" >
	SELECT <include refid="columns"/>
	<![CDATA[
	        FROM d_company
	        WHERE
		        id = #{id} 
	    ]]>
	</select>
	
</mapper>


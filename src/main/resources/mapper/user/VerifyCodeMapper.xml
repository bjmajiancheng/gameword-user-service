<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gameword.user.user.dao.VerifyCodeMapper">

    <resultMap id="VerifyCode" type="com.gameword.user.user.model.VerifyCodeModel">
        <result property="id" column="id"/>
        <result property="mobilePhone" column="mobile_phone"/>
        <result property="content" column="content"/>
        <result property="verifyCode" column="verify_code"/>
        <result property="ctime" column="c_time"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="columns">
	    <![CDATA[
        id ,mobile_phone ,content ,verify_code ,c_time 
	    ]]>
	</sql>

	<sql id="findWhere">
	    <where>
			<if test="mobilePhone != null">
				AND mobile_phone = #{mobilePhone}
			</if>
			<if test="content != null">
				AND content = #{content}
			</if>
			<if test="verifyCode != null">
				AND verify_code = #{verifyCode}
			</if>
	    </where>
	</sql>

	
	<select id="find" resultMap="VerifyCode">
	    SELECT <include refid="columns"/> FROM d_verify_code 
		<include refid="findWhere"/>
    </select>

	<select id="findById" resultMap="VerifyCode" >
	SELECT <include refid="columns"/>
	<![CDATA[
	        FROM d_verify_code
	        WHERE
		        id = #{id} 
	    ]]>
	</select>
	
</mapper>


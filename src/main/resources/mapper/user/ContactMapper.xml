<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gameword.user.user.dao.ContactMapper">

    <resultMap id="Contact" type="com.gameword.user.user.model.ContactModel">
        <result property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="userName" column="user_name"/>
        <result property="mobilePhone" column="mobile_phone"/>
        <result property="email" column="email"/>
        <result property="other" column="other"/>
        <result property="userId" column="user_id"/>
        <result property="ctime" column="c_time"/>
        <result property="utime" column="u_time"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="columns">
	    <![CDATA[
        id ,title ,content ,user_name ,mobile_phone ,email ,other ,user_id ,c_time ,u_time 
	    ]]>
	</sql>

	<sql id="findWhere">
	    <where>
			<if test="title != null">
				AND title = #{title}
			</if>
			<if test="content != null">
				AND content = #{content}
			</if>
			<if test="userName != null">
				AND user_name = #{userName}
			</if>
			<if test="mobilePhone != null">
				AND mobile_phone = #{mobilePhone}
			</if>
			<if test="email != null">
				AND email = #{email}
			</if>
			<if test="other != null">
				AND other = #{other}
			</if>
	    </where>
	</sql>

	
	<select id="find" resultMap="Contact">
	    SELECT <include refid="columns"/> FROM d_contact 
		<include refid="findWhere"/>
    </select>

	<select id="findById" resultMap="Contact" >
	SELECT <include refid="columns"/>
	<![CDATA[
	        FROM d_contact
	        WHERE
		        id = #{id} 
	    ]]>
	</select>
	
</mapper>


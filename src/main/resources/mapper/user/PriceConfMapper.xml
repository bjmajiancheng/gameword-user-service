<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gameword.user.user.dao.PriceConfMapper">

    <resultMap id="PriceConf" type="com.gameword.user.user.model.PriceConfModel">
        <result property="id" column="id"/>
        <result property="priceCn" column="price_cn"/>
        <result property="priceEn" column="price_en"/>
        <result property="updateUserId" column="update_user_id"/>
        <result property="ctime" column="c_time"/>
        <result property="utime" column="u_time"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="columns">
	    <![CDATA[
        id ,price_cn ,price_en ,update_user_id ,c_time ,u_time 
	    ]]>
	</sql>

	<sql id="findWhere">
	    <where>
	    </where>
	</sql>

	
	<select id="find" resultMap="PriceConf">
	    SELECT <include refid="columns"/> FROM d_price_conf 
		<include refid="findWhere"/>
    </select>

	<select id="findById" resultMap="PriceConf" >
	SELECT <include refid="columns"/>
	<![CDATA[
	        FROM d_price_conf
	        WHERE
		        id = #{id} 
	    ]]>
	</select>
	
</mapper>

